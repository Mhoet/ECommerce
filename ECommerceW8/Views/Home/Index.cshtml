@model IEnumerable<EcommerceW8.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}


<div>
    <h1>Home</h1>
    <img src="~/assets/banner.jpg" class="img-fluid" style="height: 50vh; width: 100%; object-fit: cover" alt="Banner Image">

    <h1> FEATURED PRODUCTS </h1>

    <div class="row mt-4 mb-4">
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var obj in Model)
            {
                <div class="col-md-4 mb-4">
                    <img src=@obj.Images.FirstOrDefault().Url class="img-fluid w-100" alt="product image" />
                    <div class="d-flex justify-content-between text-black">
                        <p class="lead">@obj.Name</p>
                        <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Index" class="btn btn-info mx-2">View More</a>
                    </div>
                </div>
            }
        }
        else
        {
            <p> Loading... </p>
        }
    </div>

    <div class="row mt-4 p-4 bg-black bg-dark text-light">
        <div class="col-md-4">
